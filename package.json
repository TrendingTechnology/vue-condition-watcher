{
  "name": "vue-condition-watcher",
  "version": "0.0.7",
  "description": "Vue Composition API for automatic fetch data when condition has been changed",
  "main": "./dist/index.js",
  "module": "./esm/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "esm/**"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:cjs": "ncc build src/index.ts -o dist -m -e vue",
    "build:esm": "tsc --target ESNext --module ES6 --outDir esm",
    "types:check": "tsc --noEmit",
    "format": "prettier --write \"{src,test,examples}/**/*.ts\"",
    "lint": "eslint \"{src,test,examples}/**/*.ts\"",
    "lint:fix": "eslint \"{src,test,examples}/**/*.ts\" --fix",
    "test": "jest",
    "watch": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/runkids/vue-condition-watcher.git"
  },
  "keywords": [
    "vue",
    "conditions",
    "watcher",
    "hook",
    "vue-hooks",
    "composition-api",
    "vue-composable",
    "composable"
  ],
  "author": "Willy Hong",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/runkids/vue-condition-watcher/issues"
  },
  "homepage": "https://github.com/runkids/vue-condition-watcher#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run types:check && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts, js}": [
      "npm run lint:fix",
      "npm run format",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "24.0.20",
    "@types/node": "11.12.0",
    "@types/rfdc": "^1.1.0",
    "@types/vue": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "2.5.0",
    "@typescript-eslint/parser": "2.5.0",
    "@zeit/ncc": "0.22.2",
    "eslint": "6.6.0",
    "eslint-config-prettier": "6.5.0",
    "husky": "2.4.1",
    "jest": "24.9.0",
    "lint-staged": "8.2.1",
    "prettier": "^2.0.5",
    "rfdc": "^1.1.4",
    "ts-jest": "24.1.0",
    "typescript": "^3.9.2",
    "vue": "^3.0.0-beta.14",
    "vue-router": "^4.0.0-alpha.12"
  },
  "peerDependencies": {
    "vue": "^3.0.0-beta.14",
    "rfdc": "^1.1.4"
  }
}
